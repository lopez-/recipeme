<h1>New Recipe!</h1>

<%= form_for :recipe, url: recipes_path do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title, :size => "50" %>
	</p>
	<p>
		<%= f.label :ingredients %><br>
		<%= f.text_area :ingredients, :size => "40x6" %>
	</p>
	<p>
		<%= f.label :preparation %><br>
		<%= f.text_area :preparation, :size => "40x12" %>
	</p>
	<p>
		<%= f.submit %><br>
	</p>
<% end %>
<%= link_to 'Back', recipes_path %>

